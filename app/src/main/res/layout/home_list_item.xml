<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/author_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_icon1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="13dp">
            <TextView
                android:id="@+id/author_name"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="作者名字"/>
            <TextView
                android:id="@+id/author_intruduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="作者介绍"
                android:textSize="18sp"/>
        </LinearLayout>
</LinearLayout>
    <ImageView
        android:id="@+id/home_content_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/pop_bg2"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/home_content_text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="2"
            android:textSize="23sp"/>
        <TextView
            android:id="@+id/home_content_text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="2"
            android:textSize="18sp"/>
    </LinearLayout>
    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lanmu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="栏目"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/home_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/lanmu"
            android:textSize="18sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/title_num"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:text="0000"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_icon1"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/title_num"
            android:layout_toStartOf="@+id/title_num" />
    </RelativeLayout>
</LinearLayout>